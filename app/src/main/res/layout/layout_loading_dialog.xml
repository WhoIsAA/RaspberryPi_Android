<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="@dimen/dist_100"
              android:layout_height="@dimen/dist_100"
              android:background="@drawable/bg_loading"
              android:gravity="center"
              android:orientation="vertical"
              android:padding="@dimen/dist_10">

    <ProgressBar
        android:id="@+id/pb_loading_dialog"
        android:layout_width="@dimen/dist_60"
        android:layout_height="@dimen/dist_60"/>

    <TextView
        android:id="@+id/tv_loading_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="正在加载..."
        android:textColor="@color/white"
        android:textSize="@dimen/textSize_caption"/>

</LinearLayout>