<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_preview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="@dimen/dist_10"
    app:cardElevation="@dimen/dist_10"
    app:cardPreventCornerOverlap="true">

    <ImageView
        android:id="@+id/iv_item_preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        tools:src="@mipmap/default_placeholder"/>

    <TextView
        android:id="@+id/tv_item_preview_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:ellipsize="end"
        android:lines="1"
        android:padding="@dimen/dist_5"
        android:textColor="@color/white"
        android:textSize="@dimen/textSize_content"
        tools:text="img_20171226123211.jpg"/>

    <TextView
        android:id="@+id/tv_item_preview_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|top"
        android:padding="@dimen/dist_5"
        android:text="12:09"
        android:textColor="@color/white"
        android:textSize="@dimen/textSize_content"
        android:visibility="gone"
        tools:text="12:09"/>

</android.support.v7.widget.CardView>